/* pages/checkSelection/checkSelection.wxss */
.title{
  font-size:40rpx;
  display: flex;
  justify-content: center;
}

.point{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top:20rpx;
}

.point-picture{
  height:65rpx;
  width:65rpx;

}

.hint{
  font-size: 35rpx;
}

.point-content{
  font-size: 35rpx;
}

.all-point{
  border-radius: 20rpx;
  border: 4rpx solid #399edd;
  padding: 6rpx 18rpx;
  box-sizing: border-box;
  background-color:rgb(255, 255, 255);
  font-size: 40rpx;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
  margin-left:20rpx;
  margin-right:20rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-bottom: 20rpx;
}

.submit-button{
  height: 100rpx;
  border-radius: 15rpx;
  box-sizing: border-box;
  background-color: #0c607c;
  color: #fff;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}